    <header class="head">
        <h2>Enter your Registration details</h2>
        <aside class="aside">
            <form id="form" action="/registration" method="POST">
                <div>First Name : <input type="text" name="firstname" placeholder="First Name"></div>
                <div>Last Name : <input type="text" name="lastname" placeholder="Last Name"></div> 
                <div>Email : <input type="email" name="email" placeholder="Email"></div>
